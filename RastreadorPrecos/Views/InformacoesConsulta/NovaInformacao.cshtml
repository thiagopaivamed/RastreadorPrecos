@model RastreadorPrecos.Models.InformacoesConsulta

@{
    ViewData["Title"] = "Nova Informacao";
}



<h4>Nova Informação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovaInformacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            
                <input asp-for="ProdutoId" type="hidden" />
                
            <div class="form-group">
                <label asp-for="Valor" class="control-label col-form-label-sm"></label>
                <input asp-for="Valor" class="form-control form-control-sm" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label col-form-label-sm"></label>
                <input asp-for="Dia" class="form-control form-control-sm" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mes" class="control-label col-form-label-sm"></label>
                <select asp-for="Mes" class="form-control form-control-sm">
                    <option value="1">Janeiro</option>
                    <option value="2">Fevereiro</option>
                    <option value="3">Março</option>
                    <option value="4">Abril</option>
                    <option value="5">Maio</option>
                    <option value="6">Junho</option>
                    <option value="7">Julho</option>
                    <option value="8">Agosto</option>
                    <option value="9">Setembro</option>
                    <option value="10">Outubro</option>
                    <option value="11">Novembro</option>
                    <option value="12">Dezembroo</option>
                </select>
                <span asp-validation-for="Mes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label col-form-label-sm"></label>
                <input asp-for="Ano" class="form-control form-control-sm" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success" /> &emsp;
                <a asp-controller="Produtos" asp-action="DetalhesProduto" asp-route-produtoId="@Model.ProdutoId" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>

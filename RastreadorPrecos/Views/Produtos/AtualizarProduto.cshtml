@model RastreadorPrecos.Models.Produto

@{
    ViewData["Title"] = "Atualizar Produto " + Model.Nome;
}



<h4>Atualizar Produto @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input asp-for="ProdutoId" type="hidden" />
               
            <div class="form-group">
                <label asp-for="Nome" class="control-label col-form-label-sm"></label>
                <input asp-for="Nome" class="form-control form-control-sm" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkProduto" class="control-label col-form-label-sm"></label>
                <input asp-for="LinkProduto" class="form-control form-control-sm" />
                <span asp-validation-for="LinkProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-outline-info btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>